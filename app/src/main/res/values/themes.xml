<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidFinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/purple_light</item>

        <item name="colorSecondary">@color/purple_lighter</item>
        <item name="colorSecondaryVariant">@color/purple_light</item>
        <item name="colorOnSecondary">@color/cream</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:background">@color/cream</item>
    </style>

    <style name="SplashText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@color/purple_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.One">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Two">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Three">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Content">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Table.Content">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Table.Content.Header">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Table.Content.NoHead">
        <item name="android:layout_weight">9</item>
    </style>

</resources>